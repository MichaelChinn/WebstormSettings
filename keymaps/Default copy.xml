<keymap version="1" name="Default copy" parent="$default">
  <action id="ActivateTerminalToolWindow">
    <keyboard-shortcut first-keystroke="alt f12" />
    <keyboard-shortcut first-keystroke="alt f12" second-keystroke="alt c" />
  </action>
  <action id="CloseAllEditorsButActive">
    <keyboard-shortcut first-keystroke="ctrl alt d" />
  </action>
  <action id="CloseEditor">
    <keyboard-shortcut first-keystroke="alt d" />
  </action>
  <action id="OpenFile">
    <keyboard-shortcut first-keystroke="shift ctrl o" />
  </action>
  <action id="SplitVertically">
    <keyboard-shortcut first-keystroke="alt v" />
  </action>
</keymap>